<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.mod_int.carwash.ui.dialog.order.CustomDialogOrderViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dialog.order.CustomDialogOrderFragment">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_margin="26sp"
                    android:text="아래 내용을 선택/등록 하세요"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/title1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="예약시간"
                        android:textSize="14sp"/>
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/timeSelect"
                        android:layout_width="140sp"
                        android:layout_height="35sp"
                        android:layout_marginStart="20sp"
                        android:paddingTop="6sp"
                        android:background="@drawable/layout_box_stroke"
                        android:popupBackground="@drawable/layout_box">
                    </androidx.appcompat.widget.AppCompatSpinner>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/linearLayout1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="의뢰타입"
                        android:textSize="14sp"/>
                    <Spinner
                        android:id="@+id/orderType1"
                        android:layout_width="140sp"
                        android:layout_height="35sp"
                        android:layout_marginStart="20sp"
                        android:paddingTop="6sp"
                        android:background="@drawable/layout_box_stroke"
                        android:popupBackground="@drawable/layout_box">
                    </Spinner>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/linearLayout2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="차량크기"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/orderType2"
                        android:layout_width="140sp"
                        android:layout_height="35sp"
                        android:layout_marginStart="20sp"
                        android:gravity="center"
                        android:text="@{viewModel.carSize}"
                        android:background="@drawable/layout_box_color_stroke"
                        android:popupBackground="@drawable/layout_box">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/linearLayout3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="세차의뢰 비용"
                            android:textSize="14sp"/>
                        <TextView
                            android:id="@+id/orderType3"
                            android:layout_width="60sp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_gravity="center_vertical"
                            android:gravity="end"
                            android:text="@={viewModel.ordAmount}"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="35sp"
                            android:gravity="center_vertical"
                            android:layout_marginStart="10sp"
                            android:text="원"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/linearLayout4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="픽업/탁송 비용"
                            android:textSize="14sp"/>
                        <TextView
                            android:layout_width="60sp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_gravity="center_vertical"
                            android:gravity="end"
                            android:text="@{viewModel.pickupDeliCost}"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="35sp"
                            android:gravity="center_vertical"
                            android:layout_marginStart="10sp"
                            android:text="원"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/title5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26sp"
                    android:layout_marginTop="26sp"
                    android:layout_marginEnd="26sp"
                    android:text="요청사항을 입력하세요"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />
                <EditText
                    android:id="@+id/tv_request"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="26sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="26sp"
                    android:background="@drawable/layout_box_stroke"
                    android:hint="1.차키는 경비실에 맡겨두었습니다.\n2.세차 전,후 사진을 꼭 문자전송해주세요!\n3.솔로 차량 닦기는 금지해주세요! 차량에 기스 생깁니다.\n4.기타요청"
                    android:padding="10sp"
                    android:gravity="left"
                    android:maxLength="96"
                    android:text="@={viewModel.orderMsg}"
                    android:textSize="14sp"
                    tools:ignore="SpeakableTextPresentCheck"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title5"/>

                <View
                    android:visibility="invisible"
                    android:id="@+id/view_middle"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="35.3dp"
                    android:background="@color/gray"
                    app:layout_constraintBottom_toTopOf="@id/tv_no"
                    app:layout_constraintTop_toBottomOf="@id/tv_request" />

                <TextView
                    android:id="@+id/tv_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="15dp"
                    android:gravity="center"
                    android:text="거절하기"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:background="@color/gray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/view_yes_no"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_middle" />
                <View
                    android:visibility="gone"
                    android:id="@+id/view_yes_no"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:background="@color/gray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_yes"
                    app:layout_constraintStart_toEndOf="@id/tv_no"
                    app:layout_constraintTop_toBottomOf="@id/view_middle" />
                <TextView
                    android:id="@+id/tv_yes"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="15dp"
                    android:gravity="center"
                    android:text="승인하기"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@color/aqua"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/view_yes_no"
                    app:layout_constraintTop_toBottomOf="@id/view_middle" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</layout>