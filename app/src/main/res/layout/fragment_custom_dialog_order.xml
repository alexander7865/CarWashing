<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dialog.CustomDialogOrderFragment">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_margin="26sp"
                    android:text="아래 내용을 입력하세요!"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26sp"
                    android:layout_marginTop="26sp"
                    android:layout_marginEnd="26sp"
                    android:text="시간을 선택하세요"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title1" />

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="30sp"
                    android:layout_width="200dp"
                    android:layout_height="50sp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/title2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/timeSelect"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/custom_background_spinner_white"
                            android:popupBackground="@drawable/layout_box">
                        </Spinner>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26sp"
                    android:layout_marginTop="26sp"
                    android:layout_marginEnd="26sp"
                    android:text="주문타입 선택 1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout1" />

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="30sp"
                    android:layout_width="200dp"
                    android:layout_height="50sp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/title3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <Spinner
                            android:id="@+id/orderType"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_background_spinner_white"
                            android:popupBackground="@drawable/layout_box"
                            android:layout_weight="1">
                        </Spinner>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/title4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26sp"
                    android:layout_marginTop="26sp"
                    android:layout_marginEnd="26sp"
                    android:text="주문타입 선택 2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="30sp"
                    android:layout_width="200dp"
                    android:layout_height="50sp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/title4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <Spinner
                            android:id="@+id/orderType2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_background_spinner_white"
                            android:popupBackground="@drawable/layout_box"
                            android:layout_weight="1">
                        </Spinner>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/title5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26sp"
                    android:layout_marginTop="26sp"
                    android:layout_marginEnd="26sp"
                    android:text="요청사항을 입력하세요!"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />
                <EditText
                    android:id="@+id/tv_request"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="26sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="26sp"
                    android:background="@drawable/layout_box_stroke"
                    android:hint="1.차키는 경비실에 맡겨두었습니다.\n2.세차 전,후 사진을 꼭 문자전송해주세요!\n3.솔로 차량 닦기는 금지해주세요! 차량에 기스 생깁니다.\n4.기타요청"
                    android:padding="10sp"
                    android:gravity="left"
                    android:maxLength="96"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="SpeakableTextPresentCheck"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title5"/>

                <View
                    android:visibility="invisible"
                    android:id="@+id/view_middle"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="35.3dp"
                    android:background="@color/gray"
                    app:layout_constraintBottom_toTopOf="@id/tv_no"
                    app:layout_constraintTop_toBottomOf="@id/tv_request" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="15dp"
                    android:gravity="center"
                    android:text="거절하기"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:background="@color/gray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/view_yes_no"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_middle" />

                <View
                    android:visibility="gone"
                    android:id="@+id/view_yes_no"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:background="@color/gray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_yes"
                    app:layout_constraintStart_toEndOf="@id/tv_no"
                    app:layout_constraintTop_toBottomOf="@id/view_middle" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_yes"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="15dp"
                    android:gravity="center"
                    android:text="승인하기"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:background="@color/aqua"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/view_yes_no"
                    app:layout_constraintTop_toBottomOf="@id/view_middle" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</layout>