<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.mod_int.carwash.ui.washer_member.wm_payment.WmPaymentViewModel" />

    </data>

    <FrameLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.washer_member.wm_payment.WmPaymentFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Space
                android:layout_width="match_parent"
                android:layout_height="15sp">
            </Space>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26sp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:text="정산하기"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/dgray" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Btn_back_to_registration"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="26sp"
                    android:onClick="@{()->viewModel.routeBackStep()}"
                    android:background="@drawable/button_cancel"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="300dp">
            </Space>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="정산하기 페이지"
                    android:textSize="32dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>