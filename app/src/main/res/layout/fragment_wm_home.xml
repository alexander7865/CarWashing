<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.WasherHomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="15sp"
                android:orientation="horizontal">
            </Space>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26sp"
                    android:text="카우"
                    android:textSize="38sp"
                    android:textStyle="bold"
                    android:textColor="@color/aqua"
                    android:layout_weight="1" />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="26sp"
                    android:background="@drawable/menu_open"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15sp"
                android:orientation="horizontal">
            </Space>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:elevation="3sp"
                        android:layout_marginTop="5sp"
                        android:layout_width="match_parent"
                        android:layout_height="310sp"
                        android:layout_marginStart="26sp"
                        android:layout_marginEnd="26sp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/layout_box"
                        android:orientation="vertical">

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="20sp"
                            android:orientation="vertical">
                        </Space>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16sp"
                                    android:layout_marginEnd="16sp"
                                    android:text="365일 24시간\n세차작업의뢰 플랫폼"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/dgray" />

                            </LinearLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="15sp"
                                android:orientation="vertical">
                            </Space>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="120sp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16sp"
                                    android:text="2022.02.02"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/dgray" />
                            </LinearLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="5sp"
                                android:orientation="vertical">
                            </Space>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="120sp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16sp"
                                    android:text="TODAY"
                                    android:textColor="@color/dgray"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10sp"
                                    android:text="12건"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/dgray" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16sp"
                                    android:text="360000원"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="@color/dgray" />
                            </LinearLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="5sp"
                                android:orientation="vertical">
                            </Space>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="120sp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16sp"
                                    android:text="나의 세차점수"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/dgray" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10sp"
                                    android:text="100점"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="@color/dgray" />
                            </LinearLayout>
                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10sp"
                                android:orientation="vertical">
                            </Space>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginStart="16sp"
                                    android:background="@drawable/schedule_send"/>

                                <!--  커스텀 스피너는 코드상으로 구현해야함-->
                                <Spinner
                                    android:id="@+id/workSetting"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="3sp"
                                    android:gravity="center_horizontal"
                                    android:background="@drawable/custom_background_spinner_white"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/dgray" />


                            </LinearLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10sp"
                                android:orientation="vertical">
                            </Space>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/btn_payment_wahser"
                                    android:layout_width="wrap_content"
                                    android:layout_height="55dp"
                                    android:layout_marginStart="16sp"
                                    android:textColor="@color/white"
                                    android:text="픽업/탁송비용 정산하기"
                                    android:backgroundTint="@color/aqua"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="20sp">
                    </Space>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="26sp"
                            android:background="@drawable/my_location" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5sp"
                            android:text="내 작업장 여기"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/dgray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5sp"
                            android:text="( 정보등록 에서 변경할 수 있어요 )"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10sp"
                        android:orientation="vertical">
                    </Space>

                    <LinearLayout
                        android:elevation="3sp"
                        android:layout_marginTop="5sp"
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:layout_marginStart="26sp"
                        android:layout_marginEnd="26sp"
                        android:background="@drawable/layout_box_radius"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="16sp"
                                android:layout_marginEnd="16sp"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3dp"
                                android:layout_weight="1"
                                android:hint="서울시 강남구 신사동 502 엠아이타워 빌딩 주차장"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/dgray" />
                        </LinearLayout>
                    </LinearLayout>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="20sp">
                    </Space>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120sp"
                        android:layout_marginStart="26sp"
                        android:layout_marginEnd="26sp"
                        android:background="@drawable/layout_box"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="advertising"/>
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:orientation="vertical"></Space>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>
</layout>