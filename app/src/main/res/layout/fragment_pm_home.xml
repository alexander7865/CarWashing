<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:id="@+id/container_pm_home"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.pickup_member.pm_home.PmHomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="15sp"
                android:orientation="horizontal">
            </Space>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26sp"
                    android:text="카우"
                    android:textSize="38sp"
                    android:textStyle="bold"
                    android:textColor="@color/aqua"
                    android:layout_weight="1" />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="26sp"
                    android:background="@drawable/menu_open"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15sp"
                android:orientation="horizontal">
            </Space>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:elevation="3sp"
                        android:layout_marginTop="5sp"
                        android:layout_width="match_parent"
                        android:layout_height="305sp"
                        android:layout_marginStart="26sp"
                        android:layout_marginEnd="26sp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/layout_box"
                        android:orientation="vertical">

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="20sp"
                            android:orientation="vertical">
                        </Space>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16sp"
                                    android:layout_marginEnd="16sp"
                                    android:text="365일 24시간\n픽업 아르바이트의 시작!"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/dgray" />

                            </LinearLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="15sp"
                                android:orientation="vertical">
                            </Space>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="120sp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16sp"
                                    android:text="2022.02.02"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/dgray" />
                            </LinearLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="5sp"
                                android:orientation="vertical">
                            </Space>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="120sp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16sp"
                                    android:text="TODAY"
                                    android:textColor="@color/dgray"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10sp"
                                    android:text="20건"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/dgray" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16sp"
                                    android:text="100000원"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/dgray" />
                            </LinearLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="5sp"
                                android:orientation="vertical">
                            </Space>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="120sp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16sp"
                                    android:text="나의 픽업점수"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/dgray" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10sp"
                                    android:text="100점"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="@color/dgray" />
                            </LinearLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10sp"
                                android:orientation="vertical">
                            </Space>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginStart="16sp"
                                    android:background="@drawable/schedule_send"/>

                                <!--  커스텀 스피너는 코드상으로 구현해야함-->
                                <Spinner
                                    android:id="@+id/workSetting"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="3sp"
                                    android:gravity="center_horizontal"
                                    android:background="@drawable/custom_background_spinner_white"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/dgray" />

                            </LinearLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10sp"
                                android:orientation="vertical">
                            </Space>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/btn_settlementRequest"
                                    android:layout_width="wrap_content"
                                    android:layout_height="55dp"
                                    android:layout_marginStart="16sp"
                                    android:textColor="@color/white"
                                    android:text="픽업/탁송비용 정산하기 "
                                    android:backgroundTint="@color/aqua"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="20sp">
                    </Space>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="26sp"
                            android:background="@drawable/my_location" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5sp"
                            android:text="납품 작업장"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/dgray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5sp"
                            android:text="( 조심히 운전해주세요 )"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10sp"
                        android:orientation="vertical">
                    </Space>

                    <LinearLayout
                        android:elevation="3sp"
                        android:layout_marginTop="5sp"
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:layout_marginStart="26sp"
                        android:layout_marginEnd="26sp"
                        android:background="@drawable/layout_box_radius"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="16sp"
                                android:layout_marginEnd="16sp"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3dp"
                                android:layout_weight="1"
                                android:hint="서울시특별시 강남구 카우세차장"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/dgray" />
                        </LinearLayout>
                    </LinearLayout>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="35sp">
                    </Space>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="26sp"
                        android:layout_marginEnd="26sp"
                        android:background="@drawable/layout_box"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/dgray"
                                android:text="2022.02.02"
                                android:textSize="26sp" />

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"></Space>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10sp"
                                android:background="@drawable/weather_sunny" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15sp"
                                android:text="7.7"
                                android:textColor="@color/dgray"
                                android:textSize="26sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:layout_marginStart="5sp"
                                android:layout_marginTop="5sp"
                                android:text="o"
                                android:textColor="@color/dgray"
                                android:textSize="10sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="1sp"
                                android:text="C"
                                android:textColor="@color/dgray"
                                android:textSize="26sp" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="10sp"></Space>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="125sp"
                                android:layout_height="wrap_content"
                                android:elevation="3dp"
                                android:text="추천 카페/맛집"
                                android:textColor="@color/dgray"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10sp"
                                android:layout_weight="1"
                                android:elevation="3dp"
                                android:ellipsize="end"
                                android:text="미사리 나인블럭"
                                android:textColor="@color/dgray"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/arrow_right_alt" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="8sp"></Space>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="125sp"
                                android:layout_height="wrap_content"
                                android:elevation="3dp"
                                android:text="오늘의 드라이브코스"
                                android:textColor="@color/dgray"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10sp"
                                android:layout_weight="1"
                                android:elevation="3dp"
                                android:ellipsize="end"
                                android:text="북한산 둘레길"
                                android:textColor="@color/dgray"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/arrow_right_alt" />
                        </LinearLayout>

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:orientation="vertical"></Space>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>
</layout>