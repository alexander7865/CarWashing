<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <FrameLayout
        android:id="@+id/recycler_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:backgroundTint="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_box_stroke_recycler">
            <LinearLayout
                android:id="@+id/fullscreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16sp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/name_washer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16sp"
                        android:layout_weight="1"
                        android:text="홍*동"
                        android:textSize="16sp"
                        android:textColor="@color/dgray"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/locationWasher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16sp"
                        android:gravity="end"
                        android:text="압구정 3동"
                        android:textColor="@color/dgray"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16sp"
                            android:layout_marginTop="5sp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="건수 :"
                                android:textSize="16sp"
                                android:textColor="@color/dgray"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/countOrder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5sp"
                                android:text="5"
                                android:textSize="16sp"
                                android:textColor="@color/dgray"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10sp"
                                android:text="/"
                                android:textSize="16sp"
                                android:textColor="@color/dgray"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10sp"
                                android:text="세차실력 :"
                                android:textSize="16sp"
                                android:textColor="@color/dgray"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/pointWasher"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5sp"
                                android:text="90"
                                android:textSize="16sp"
                                android:textColor="@color/dgray"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16sp"
                            android:layout_marginTop="10sp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="픽업 탁송비용 :"
                                android:textSize="16sp"
                                android:textColor="@color/dgray"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/deliPriceWasher"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5sp"
                                android:text="6000"
                                android:textColor="@color/dgray"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16sp"
                            android:layout_marginTop="10sp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="광택비용 :"
                                android:textSize="16sp"
                                android:textColor="@color/dgray"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/policyPriceWasher"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5sp"
                                android:layout_weight="1"
                                android:text="20000"
                                android:textSize="16sp"
                                android:textColor="@color/dgray"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/washingType"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableStart="@drawable/recycler_bubble"
                            android:layout_marginTop="55sp"
                            android:paddingStart="10sp"
                            android:paddingEnd="16sp"
                            android:background="@drawable/recyclerview_radius"
                            android:gravity="center"
                            android:text=" 픽업손세차 "
                            android:textColor="@color/white"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16sp">
                </Space>


                    <!-- expandable screen-->
                <LinearLayout
                    android:id="@+id/expandableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32sp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/inWashingCountryOfCar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16sp"
                            android:text="내부세차(외제차)"
                            android:textSize="16sp"
                            android:textColor="@color/dgray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/inWashingCarSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16sp"
                            android:text="준중형 :"
                            android:textSize="16sp"
                            android:textColor="@color/dgray" />
                        <TextView
                            android:id="@+id/inWashingCost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5sp"
                            android:text="18000"
                            android:textSize="16sp"
                            android:textColor="@color/dgray" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5sp"
                            android:layout_weight="1"
                            android:text="원"
                            android:textSize="16sp"
                            android:textColor="@color/dgray" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="세차시간 :"
                            android:textSize="16sp"
                            android:textColor="@color/dgray" />
                        <TextView
                            android:id="@+id/inWashingTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5sp"
                            android:text="20"
                            android:textSize="16sp"
                            android:textColor="@color/dgray" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16sp"
                            android:layout_marginStart="5sp"
                            android:text="분"
                            android:textSize="16sp"
                            android:textColor="@color/dgray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/outWashingCountryOfCar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16sp"
                            android:text="외부세차(외제차)"
                            android:textSize="16sp"
                            android:textColor="@color/dgray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/outWashingCarSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16sp"
                            android:text="준중형 :"
                            android:textSize="16sp"
                            android:textColor="@color/dgray" />
                        <TextView
                            android:id="@+id/outWashingCost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5sp"
                            android:text="18000"
                            android:textSize="16sp"
                            android:textColor="@color/dgray" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5sp"
                            android:layout_weight="1"
                            android:text="원"
                            android:textSize="16sp"
                            android:textColor="@color/dgray" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="세차시간 :"
                            android:textSize="16sp"
                            android:textColor="@color/dgray" />
                        <TextView
                            android:id="@+id/outWashingTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5sp"
                            android:text="20"
                            android:textSize="16sp"
                            android:textColor="@color/dgray" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16sp"
                            android:layout_marginStart="5sp"
                            android:text="분"
                            android:textSize="16sp"
                            android:textColor="@color/dgray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/inOutWashingCountryOfCar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16sp"
                            android:text="내부+외부세차(외제차)"
                            android:textSize="16sp"
                            android:textColor="@color/dgray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/inOutWashingCarSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16sp"
                            android:text="준중형 :"
                            android:textSize="16sp"
                            android:textColor="@color/dgray" />
                        <TextView
                            android:id="@+id/inOutWashingCost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5sp"
                            android:text="18000"
                            android:textSize="16sp"
                            android:textColor="@color/dgray" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5sp"
                            android:layout_weight="1"
                            android:text="원"
                            android:textSize="16sp"
                            android:textColor="@color/dgray" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="세차시간 :"
                            android:textSize="16sp"
                            android:textColor="@color/dgray" />
                        <TextView
                            android:id="@+id/inOutWashingTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5sp"
                            android:text="30"
                            android:textSize="16sp"
                            android:textColor="@color/dgray" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16sp"
                            android:layout_marginStart="5sp"
                            android:text="분"
                            android:textSize="16sp"
                            android:textColor="@color/dgray" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100sp"
                        android:layout_marginTop="30sp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/introduceText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16sp"
                            android:layout_marginEnd="16sp"
                            android:padding="10dp"
                            android:text="안녕하세요. 슈퍼카 제외 합리적인 가격으로 세차를 진행하고 있습니다."
                            android:background="@drawable/layout_box_stroke"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30sp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_washingOrder"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="wrap_content"
                            android:layout_height="50sp"
                            android:gravity="center"
                            android:text="세차작업 의뢰하기"
                            android:textColor="@color/white"
                            android:background="@drawable/button_action_lorange"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginStart="16sp"
                            android:layout_marginEnd="16sp"
                            android:text=" - 의뢰 후 취소할 경우 고객센터로 문의하여 주세요 - "
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="30sp">
                    </Space>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>